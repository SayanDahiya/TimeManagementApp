#: import Factory kivy.factory.Factory

<ObjEntry>:
    pos_hint: {"center_x":0.5, "center_y":0.5}
    size_hint: (0.5,0.5)
    canvas:
        Color:
            rgba: (0.6,0.6,0.6,1)
        Rectangle:
            size:self.size
            pos:self.pos
    TextInput:
        id: task
        size_hint: 0.75,0.1
        pos_hint: {"center_x": 0.5, "center_y":0.75}
        text: "Task"
        multiline: False
        background_active: ""
        background_normal: ""
        background_color: (1,1,1,0.2)
        foreground_color: (128/255,167/255,142/255,1)
        font_size: 40
    TextInput:
        id:time
        size_hint: 0.75,0.05
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        text: "00:00"
        multiline: False
        background_active: ""
        background_normal: ""
        background_color: (1,1,1,0.2)
        foreground_color: (128/255,167/255,142/255,1)
        font_size: 40
    TextInput:
        id: priority
        size_hint: 0.075,0.05
        pos_hint: {"center_x": 0.5, "center_y":0.25}
        text: "1"
        multiline: False
        background_active: ""
        background_normal: ""
        background_color: (1,1,1,0.2)
        foreground_color: (128/255,167/255,142/255,1)
        font_size: 40
        on_text_validate:root.get_entries()


<temporarylabel>:
    id:time_diff_temp
    size_hint: 1,1
    pos_hint: {"center_x": 0.5, "center_y":0.5}
    canvas.before:
        Color:
            rgba: (20 / 255, 50 / 255, 45 / 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<SpcLabel>:
    background_color:(4/255, 12/255, 9/255, 1)
    background_normal:""
    #background_down:""


<SctrLay>:
    size: root.width, root.height
    do_rotation: False



<InfoPop@Popup>
    auto_dismiss:False
    title: ""
    separator_height: 0
    background_normal: ""
    background_color:(11/255,29/255,30/255,1)
    FloatLayout:
        id: pop_grid
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos:self.pos
        Button:
            id: background_button
            background_normal: ""
            background_color: (11/255,29/255,30/255,1)
            background_disabled_normal:""
            size_hint: 1,1
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            on_press: root.dismissal()
        FloatLayout:
            size_hint: 0.4,0.4
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            canvas.before:
                Color:
                    rgba: (33/255,76/255,65/255,1)
                Rectangle:
                    size:self.size
                    pos:self.pos
            TextInput:
                id: title
                size_hint: 0.75,0.25
                pos_hint: {"center_x": 0.5, "center_y":0.75}
                text: "Title"
                multiline: False
                background_active: ""
                background_normal: ""
                background_color: (1,1,1,0.2)
                foreground_color: (128/255,167/255,142/255,1)
                font_size: 50

            TextInput:
                id: time
                size_hint: 0.75,0.25
                pos_hint: {"center_x": 0.5, "center_y":0.25}
                text: "00:00"
                multiline: False
                background_active: ""
                background_normal: ""
                background_color: (1,1,1,0.2)
                foreground_color: (128/255,167/255,142/255,1)
                font_size: 50
                on_text_validate: root.thirty_buff()

        Label:
            id: total_time
            text: ''
            font_size: 50
            size_hint: 0.75,0.25
            pos_hint: {"center_x": 0.5, "center_y":0.1}




